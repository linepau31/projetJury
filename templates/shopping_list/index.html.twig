{% extends 'base.html.twig' %}

{% block title %}Liste de courses - H2o Fabrik Cocktail{% endblock %}

{% block content %}

    <h1>Liste de courses</h1>
    <p>
    Retrouver la liste de vos envies pour fabriquer des cocktails.<br>
    <a href="{{  path('home') }}">Retour à l'accueil</a>
    </p>

    {% if shopping_list |length %}
        <table class="table table-hover mt-3">
        <thead>
        <tr>
            <th scope="col">Produit</th>
            <th scope="col"></th>
            <th scope="col">Prix</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for product in shopping_list %}
            <tr>
                <th>
                    <img src="/uploads/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="75px"><br>
                </th>
                <td>
                    {{ product.product.name }}<br>
                    <small>{{ product.product.subtitle }}</small>
                </td>
                <td>{{ (product.product.price / 100)|number_format(2, ',', '.') }} €</td>

                <td>
                    <a href="{{ path('delete_shopping_list', { 'id' : product.product.id}) }}">
                        <img src="{{ asset('assets/img/poubelle-de-recyclage.png') }}" alt="Supprimer mon produit" height="22px"> <br>
                    </a>
                </td>
                {% endfor %}
            </tbody>
            </table>
    {% else %}
        <hr>
        <p>Votre Liste de courses est vide !</p>
    {% endif %}

{% endblock %}

